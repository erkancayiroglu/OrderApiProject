@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Rezervasyonlar";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">📅 Rezervasyon Talepleri</h5>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>E-Mail</th>
                            <th>Telefon</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Gün</th>
                            <th>Durum</th>
                            <th>Restoran</th>
                            <th>Kişi</th>
                            <th>Özel İstek</th>
                            <th>Onayla</th>
                            <th>İptal Et</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td class="fw-bold">@booking.BookingID</td>
                                <td>@booking.Name</td>
                                <td>@booking.UserMail</td>
                                <td>@booking.PhoneNumber</td>
                                <td>@booking.BookingDate.ToString("dd.MM.yyyy")</td>
                                <td>@booking.BookingTime</td>
                                <td>@booking.BookingDay</td>

                                <td>
                                    <span class="badge
                                            @(booking.Status == "Onaylandı" ? "bg-success" :
                                                                                    booking.Status == "Onay Bekliyor" ? "bg-warning text-dark" :
                                                                                    booking.Status == "İptal" ? "bg-danger" :
                                                                                    "bg-secondary")">
                                        @booking.Status
                                    </span>
                                </td>

                                <td>@booking.RestaurantName</td>
                                <td>
                                    <span class="badge bg-success">
                                        @booking.NumberOfPeople
                                    </span>
                                </td>
                                <td class="text-start" style="max-width:200px;">
                                    @booking.Message
                                </td>
                                <td>
                                    <a href="/AdminBooking/BookingApproved"
                                       class="btn btn-outline-primary">
                                        Onayla
                                    </a>
                                </td>
                                <td><a href="/AdminBooking/BookingApproved" class="btn btn-outline-danger">İptal Et</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-warning text-center">
                        Henüz rezervasyon bulunmamaktadır.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
