@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@model List<OrderListDto>
@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">
        Henüz siparişiniz bulunmamaktadır.
    </div>
    return;
}

<div class="container my-5">
    <h3 class="mb-4 fw-bold">Siparişlerim</h3>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Misafir</th>
                    <th>Sipariş Tarihi</th>
                    <th>Durum</th>
                    <th>Onayla</th>
                    <th>İptal Et</th>
                    <th>Hazırlanıyor</th>
                    <th>Yolda</th>
                    <th>Teslim Edildi</th>
      
                    <th>Toplam Tutar</th>
                    <th class="text-center">İşlem</th>
                </tr>
            </thead>
            <tbody>


                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.Name</td>
                     
                        <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <span class="badge px-3 py-2
            @(order.OrderStatus == "Onay Bekliyor" ? "bg-success" :
                                            order.OrderStatus == "Onaylandı" ? "bg-light" :
                                            order.OrderStatus == "Hazırlanıyor" ? "bg-warning text-dark" :
                                            order.OrderStatus == "Yolda" ? "bg-info text-dark" :
                                            order.OrderStatus == "Teslim Edildi" ? "bg-success" :
                                            order.OrderStatus == "İptal Edildi" ? "bg-danger" :
                                                                                  "bg-dark")">

                                @* İkonlar *@
                                @if (order.OrderStatus == "Onay Bekliyor")
                                {
                                    <i class="fa fa-hourglass-half me-1"></i>
                                }
                                else if (order.OrderStatus == "Onaylandı")
                                {
                                    <i class="fa fa-check-circle me-1"></i>
                                }
                                else if (order.OrderStatus == "Hazırlanıyor")
                                {
                                    <i class="fa fa-utensils me-1"></i>
                                }
                                else if (order.OrderStatus == "Yolda")
                                {
                                    <i class="fa fa-motorcycle me-1"></i>
                                }
                                else if (order.OrderStatus == "Teslim Edildi")
                                {
                                    <i class="fa fa-box-open me-1"></i>
                                }
                                else if (order.OrderStatus == "İptal Edildi")
                                {
                                    <i class="fa fa-times-circle me-1"></i>
                                }

                                @order.OrderStatus
                            </span>
                        </td>

                        <td>
                            <a href="/AdminOrder/OrderApproved?id=@order.Id&userId=@order.UserId"
                               class="btn btn-outline-primary">
                                Onayla
                            </a>
                        </td>
                        <td><a href="/AdminOrder/OrderApproved?id=@order.Id&userId=@order.UserId" class="btn btn-outline-danger">İptal Et</a></td>
                        <td><a href="/AdminOrder/PrepareOrder?id=@order.Id&userId=@order.UserId" class="btn btn-outline-warning">Hazırlanıyor</a></td>
                        <td><a href="/AdminOrder/WayOrder?id=@order.Id&userId=@order.UserId" class="btn btn-outline-info">Yolda</a></td>
                        <td><a href="/AdminOrder/DeliverOrder?id=@order.Id&userId=@order.UserId" class="btn btn-outline-success">Teslim Edildi</a></td>
                     
                        <td class="fw-bold">@order.TotalAmount ₺</td>
                        <td class="text-center">
                            <a href="/Sepet/Sipariş/@order.Id"
                               class="btn btn-outline-primary btn-sm">
                                Detaylar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

