@model CreateProductDto
@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Yeni Ürün Ekle</h1>

<div class="container">

    <form asp-controller="AdminProduct" asp-action="AddProduct" method="post" enctype="multipart/form-data">

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <!-- Name -->
        <div class="mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Image -->
        <div class="mb-3">
            <input type="file" name="imageFile" id="imageFile" class="form-control" />
        </div>

        <div>
            <img id="preview" src="~/img/default.png" alt="no image" style="width:100px" />
            <input type="hidden" asp-for="ImageUrl" />
        </div>

        <br />

        <!-- Stock -->
        <div class="mb-3">
            <label class="form-label" asp-for="Stock"></label>
            <input asp-for="Stock" type="number" class="form-control" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div class="mb-3">
            <label class="form-label" asp-for="Price"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Category -->
        <div class="mb-3">
            <select asp-for="CategoryId" class="form-control"
                    asp-items="@(ViewBag.CategorySelectList as SelectList)">
                <option value="">-- Kategori Seçiniz --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>
